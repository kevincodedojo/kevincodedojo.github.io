<%- include("partials/header.ejs")%>


    <body>
        <h1 class="headerh1"> Quotes Found </h1>
        <div class="mainbox">
            <% if (quotes.length===0){ %>

                <p class="no-results">No quotes found. Try another search!</p>

                <% }else{ %>

                    <% for(i of quotes){ %>
                            <div class="quote-card">
                                <p class="quote-text">"<%= i.quote %>"</p>
                                <p class="quote-author">
                                    -<a href="#" id="<%=i.authorId%>" class="author-link">
                                            <%= i.firstName%>
                                                <%=i.lastName%>
                                    </a>
                                </p>

                            </div>
                        <%}%>

                    <% } %>

                    <a href="/" class="btn btn-light back-btn">‚Üê Back to Search</a>

        </div>


        <!-- <div id="authorInfo"></div> -->




        <!-- Button trigger modal -->
        <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Launch demo modal
        </button> -->

        <!-- Modal -->
        <div class="modal fade" id="authorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Author Information</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="authorInfo"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                    </div>
                </div>
            </div>
        </div>


        <%- include("partials/footer.ejs")%>

    </body>

    </html>